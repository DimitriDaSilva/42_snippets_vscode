	},
	"include_custom": {
		"prefix": ["include_custom", "ic"],
		"body": [
			"#include \"${TM_FILENAME/c$/h/g}\"",
		],
		"description": "include_custom"
	},
	"include_libft": {
		"prefix": ["include_libft", "il"],
		"body": [
